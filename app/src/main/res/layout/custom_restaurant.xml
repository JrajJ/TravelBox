<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    app:cardMaxElevation="0dp"
    >


    <LinearLayout

android:background="@drawable/cardview_gradient_hotels"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout


            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/hotel_img_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_4"
                    android:src="@drawable/h4"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"/>
                <TextView
                    android:layout_gravity="top|end"
                    android:id="@+id/textViewRestaurantRatings"
                    android:text="8.5"
                    android:visibility="gone"

                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#19a600" />
                <!--<ImageView
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/imageViewProductThumb"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/h1"
                    android:scaleType="centerInside" />-->
            </FrameLayout>

            <TextView
                android:id="@+id/textViewRestaurantName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:lines="1"
                android:textSize="11sp"
                android:gravity="center|top"
                android:textColor="#000000"
                android:text="Hotel Blu Readdison"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />




        </LinearLayout>


        <TextView
            android:id="@+id/textViewRestaurantAddress"

            android:textSize="10sp"
            android:textColor="#717171"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/margin_4"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:text="Calangute, Goa"
            android:lines="2"
            android:maxLines="2"

            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textViewHotelid"
                android:text="@string/Rs"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewHotelLongitude"
                android:text="@string/Rs"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewHotelLattitude"
                android:text="@string/Rs"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewRestaurantContact"
                android:text="@string/Rs"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/textViewRestaurantWishlistt"
                android:text=""
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_4"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />


    </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>