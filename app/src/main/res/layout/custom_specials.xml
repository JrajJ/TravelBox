<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginRight="1dp"
    android:layout_marginEnd="1dp"
    android:layout_height="wrap_content"
   >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_dealsforyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/h1"
                    android:scaleType="fitCenter"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_gravity="top|end"
                    android:id="@+id/textViewDealsRatings"
                    android:text="8.5"
                    android:visibility="gone"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorWhite" />
                <!--<ImageView
                    android:contentDescription=""
                    android:layout_gravity="center"
                    android:layout_margin="12dp"
                    android:id="@+id/imageViewProductThumb"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:src="@drawable/h1"
                    android:scaleType="centerInside" />-->
                <TextView
                    android:id="@+id/textViewDealsName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:lines="1"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:background="@drawable/cardview_gradient"
                    android:textColor="@color/colorWhite"
                    android:text="Hotel Blu Readdison"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
                <TextView
                    android:id="@+id/textViewDealsAddress"
                    android:visibility="gone"
                    android:textSize="9sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_4"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_4"
                    android:layout_marginStart="@dimen/margin_4"
                    android:layout_marginTop="@dimen/margin_4"
                    android:layout_marginBottom="@dimen/margin_4"

                    android:text="Calangute, Goa"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


                <TextView
                    android:id="@+id/textViewDealsContact"
                    android:text="@string/Rs"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_8"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_4"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorWhite"/>
            </FrameLayout>











    </LinearLayout>

</android.support.v7.widget.CardView>